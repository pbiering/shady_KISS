<menuchannels x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="0" scaletvy="0" scaletvwidth="100%" scaletvheight="100%">

	<background>
		<area x="0" y="0" width="100%" height="100%" transparency="15" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMenuDefault" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="3">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
		<area condition="{currentInfo}" transparency="10" x="70%" y="14%" width="25%" height="75%" layer="3">
				<drawimage x="0" y="0" height="100%" width="100%" imagetype="skinpart" path="currentElementHeader" />
		</area>
	</background>

	<header>
		<area x="3%" y="2%" width="34%" height="7%" layer="3">
			<drawtext x="0" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{title}" />
		</area>
	</header>

	<menuitems x="0" y="14%" orientation="vertical" width="100%" height="75%" align="center" numlistelements="{numShortSubmenuitems}">
		<listelement>
<!--not{currentInfo}-->
			<area condition="not{currentInfo}" x="17%" width="78%" transparency="10" layer="3">
				<drawimage condition="not{current}++not{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLong"/>
				<drawimage condition="not{current}++{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonSeparatorLong"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActive_Gradient" />
				<drawimage condition="{current}++eq({coloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActiveColor" />
				<drawimage condition="{current}++eq({coloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActive" />
			</area>
			<area condition="not{currentInfo}++{timerfull}" x="92%" width="2%" layer="4">
				<drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="redFL" />
			</area>
<!--{currentInfo}-->
			<area condition="{currentInfo}" x="17%" width="52%" transparency="10" layer="3">
				<drawimage condition="not{current}++not{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMedium"/>
				<drawimage condition="not{current}++{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonSeparatorMedium"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive_Gradient" />
				<drawimage condition="{current}++eq({coloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActiveColor" />
				<drawimage condition="{current}++eq({coloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive" />
			</area>
			<area condition="not{separator}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellBackgroundChannels" />
			</area>
			<area condition="{separator}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellSepBackground" />
			</area>
			<area condition="not{separator}" x="1%" width="4%" layer="4">
				<drawtext x="0" align="right" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{printf('%4d', number)}" />
			</area>
			<area condition="not{separator}" x="8%" width="6%" layer="4">
				<drawimage name="logo" imagetype="channellogo" path="{channelid}" x="21%" y="20%" width="65%" height="65%" />
			</area>
			<!--<areascroll condition="not{separator}++{showChannelDetails}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="50%" width="23%" layer="3">
				<drawtext x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}" />
			</areascroll>
			<area condition="not{separator}++{showChannelDetails}" x="73%" width="21%" layer="3">
				<drawtext name="menutext" x="0" align="right" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{sourcedescription}, Transp. {transponder}" />
			</area>-->
<!--not{currentInfo}-->
			<areascroll condition="not{separator}++not{currentInfo}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="3">
				<drawtext name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}" />
			</areascroll>
			<area condition="{separator}++not{currentInfo}" x="19%" width="73%" layer="3">
				<drawtext x="0" align="center" valign="center" font="{light}" fontsize="70%" color="{clrHigh}" text="{name}" />
			</area>
<!--{currentInfo}-->
			<areascroll condition="not{separator}++{currentInfo}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="3">
				<drawtext name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}" />
			</areascroll>
			<area condition="{separator}++{currentInfo}" x="19%" width="47%" layer="3">
				<drawtext x="0" align="center" valign="center" font="{light}" fontsize="70%" color="{clrHigh}" text="{name}" />
			</area>
		</listelement>

		<currentelement delay="0" fadetime="0">
			<area condition="{currentInfo}++isset{presenteventtitle}" x="71%" y="1%" width="23%" height="6%" layer="4">
				<drawtext x="0" y="5%" width="100%" align="center" font="{light}" fontsize="75%" color="{clrLightGray}" text="{presenteventtitle}" />
			</area>
			<area condition="{currentInfo}++isset{presenteventtitle}" x="70%" y="7%" width="25%" height="5%" layer="4">
				<drawtext x="4%" y="25%" width="100%" font="{light}" fontsize="75%" color="{clrLightGray}" text="{presenteventstart} - {presenteventstop}      {presenteventdurationminutes}min" />
			</area>
			<area condition="{currentInfo}++isset{presenteventtitle}" x="70%" y="12%" width="25%" height="{areaheight}*0.93" layer="4">
				<drawimage condition="{hasposter}" name="poster" imagetype="image" path="{posterpath}" x="4%" y="2%" width="{areawidth}*0.35" height="{areawidth}*0.35* {posterheight} / {posterwidth}"/>
				<drawtextbox condition="{hasposter}" x="4%" y="2%" width="92%" height="96%" float="topleft" floatwidth="{width(poster)}*1.1" floatheight="{height(poster)}*1.1" font="{light}" fontsize="4%" color="{clrLightGray}" text="{presenteventdescription}" />
				<drawtextbox condition="not{hasposter}" x="4%" y="2%" width="92%" height="96%" font="{light}" fontsize="4%" color="{clrLightGray}" text="{presenteventdescription}" />
			</area>
			<area condition="{currentInfo}++isset{presenteventtitle}" x="70%" y="1%" width="25%" height="6%" layer="4">
				<drawrectangle x="2%" y="{areaheight}*0.92" width="{areawidth}*0.96*{presenteventelapsed}/{presenteventduration}" height="{areaheight}*0.03" color="{clrHigh}" />
			</area>
		</currentelement>
	</menuitems>

	<scrollbar>
		<area condition="lt({height},1000)" x="95%" y="14%" width="5%" height="75%" layer="3">
			 <drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowScrollSub" />
			 <drawimage x="15%" y="{areaheight} * {offset} / 1000" width="{areawidth}*0.1" height="{areaheight} * {height} / 1000" imagetype="skinpart" path="scrollBar" />
		</area>
	</scrollbar>
</menuchannels>
