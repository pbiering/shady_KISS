<menumain x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="0%" scaletvy="18%" scaletvwidth="54%" scaletvheight="54%">

	<background>
		<area x="0" y="0" width="100%" height="100%" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
			<drawrectangle x="0%" y="18%" width="54%" height="54%" color="{clrTransparent}" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMainKiss" />
		</area>
		<area condition="{showInfosAndTimers}||{showInfosAndTimersAndLastrecs}" x="0" y="73%" width="100%" height="27%" layer="3">
			<drawimage  x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMainBottom" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="3">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
		<area x="2%" y="0" width="10%%" height="10%" layer="4">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="VDR" />
		</area>
	</background>

	<header>
		<area x="57%" y="86%" width="15%" height="6%" layer="3">
		</area>
	</header>

	<colorbuttons>
		<area x="1%" y="73%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage condition="{red1}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage condition="{green1}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />
			<drawtext condition="{yellow1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage condition="{yellow1}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />
			<drawtext condition="{blue1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage condition="{blue1}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
		<area x="14%" y="73%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage condition="{red2}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage condition="{green2}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />
			<drawtext condition="{yellow2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage condition="{yellow2}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />
			<drawtext condition="{blue2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage condition="{blue2}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
		<area x="27%" y="73%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage condition="{red3}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage condition="{green3}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />
			<drawtext condition="{yellow3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage condition="{yellow3}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />
			<drawtext condition="{blue3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage condition="{blue3}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
		<area x="40%" y="73%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage condition="{red4}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage condition="{green4}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />
			<drawtext condition="{yellow4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage condition="{yellow4}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />
			<drawtext condition="{blue4}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage condition="{blue4}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
	</colorbuttons>

	<timers detached="true" delay="100" fadetime="500" >
		<area condition="not{numtimerconflicts}" x="61%" y="73%" width="12%" height="6%" layer="3">
			<drawtext condition="gt({numtimers}, 1)" x="5%" y="15%" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{numtimers} {tr(activetimers)}" />
			<drawtext condition="eq({numtimers}, 1)" x="5%" y="15%" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{numtimers} {tr(activetimer)}" /> 
		</area>
		<area condition="{numtimerconflicts}" x="61%" y="73%" width="15%" height="6%" layer="3">
			<drawtext condition="eq({numtimerconflicts}, 1)" x="5%" y="0" valign="center" font="{light}" fontsize="60%" color="{clrRed}" text="{numtimerconflicts} {tr(conflict)}!" />
			<drawtext condition="gt({numtimerconflicts}, 1)" x="5%" y="0" valign="center" font="{light}" fontsize="60%" color="{clrRed}" text="{numtimerconflicts} {tr(conflicts)}!" />
		</area>

		<area condition="{showInfosAndTimers}++not{showInfosAndTimersAndLastrecs}" x="1%" y="80%" width="78%" height="18%" layer="3">
			<loop name="timers" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/7" rowheight="{areaheight}" overflow="cut">
				<drawimage  cache="true" name="logo" y="{areaheight}*0.09" width="{columnwidth}*0.5" height="17%" align="center" imagetype="channellogo" path="{timers[channelid]}" />
				<drawtextbox x="1%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="2" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[title]}" />
				<drawtext condition="not{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[datetime]}"/>
				<drawtext condition="{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrRed}" text="{timers[datetime]}"/>
				<drawimage condition="{timers[isremotetimer]}" x="{columnwidth}*0.78" y="78%" width="{columnwidth}*0.16" height="20%" imagetype="skinpart" path="remoteTimers" />
			</loop>
		</area>
		<area condition="not{showInfosAndTimers}++{showInfosAndTimersAndLastrecs}" x="1%" y="80%" width="44%" height="18%" layer="3">
			<loop name="timers" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/4" rowheight="{areaheight}" overflow="cut">
				<drawimage  cache="true" name="logo" y="{areaheight}*0.09" width="{columnwidth}*0.5" height="17%" align="center" imagetype="channellogo" path="{timers[channelid]}" />
				<drawtextbox x="2%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="2" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[title]}" />
				<drawtext condition="not{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[datetime]}"/>
				<drawtext condition="{timers[recording]}" align="center" x="10" y="78%" font="{light}" fontsize="15%" color="{clrRed}" text="{timers[datetime]}"/>
				<drawimage condition="{timers[isremotetimer]}" x="{columnwidth}*0.8" y="78%" width="{columnwidth}*0.16" height="20%" imagetype="skinpart" path="remoteTimers" />
			</loop>
		</area>
	</timers>
	<lastrecordings condition="{showInfosAndTimers}||{showInfosAndTimersAndLastrecs}" detached="true" delay="100" fadetime="500">
		<area condition="eq({numtimers}, 6)++not{showInfosAndTimersAndLastrecs}" x="68%" y="80%" width="11%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/1" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="4%" y="40%" width="{columnwidth}*0.85" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="4%" y="40%" width="{columnwidth}*0.85" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 5)++not{showInfosAndTimersAndLastrecs}" x="56%" y="80%" width="23%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/2" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="5%" y="40%" width="{columnwidth}*0.8" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="5%" y="40%" width="{columnwidth}*0.8" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="gt({numtimers}, 4)++{showInfosAndTimersAndLastrecs}" x="45%" y="80%" width="34%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/3" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 4)" x="45%" y="80%" width="34%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/3" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 3)" x="34%" y="80%" width="45%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/4" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="2%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 2)" x="23%" y="80%" width="56%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/5" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.9" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 1)" x="12%" y="80%" width="67%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/6" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>

		<area condition="eq({numtimers}, 0)" x="1%" y="80%" width="78%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/7" rowheight="{areaheight}" overflow="cut">
				<drawtext x="0" y="10%" align="center" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox condition="isset{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[seriesname]} - {recordings[name]}" />
				<drawtextbox condition="empty{recordings[seriesname]}" x="1%" y="40%" width="{columnwidth}*0.875" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" />
			</loop>
		</area>
	</lastrecordings>

	<discusage detached="true" delay="150" fadetime="500">
		<area x="75%" y="73%" width="18%" height="6%" layer="3">
			<drawtext x="0" y="0" align="right" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{vdrusagestring}" />
		</area>
	</discusage>

	<devices> 
	</devices>

	<currentweather condition="{showInfosAndTimers}||{showInfosAndTimersAndLastrecs}" detached="true" delay="200" fadetime="500" >
		<area x="81%" y="92%" width="7%" height="6%" layer="3">
			<drawimage name="weathericon" x="0" valign="center" width="{areaheight}*0.7" height="{areaheight}*0.7" imagetype="icon" path="{icon}" />
			<drawtext name="temperature" x="0" align="right" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{temperature}°C" />
		</area>
		<area x="88%" y="92%" width="7%" height="5%" layer="3">
			<drawtext x="0" y="15%" align="right" valign="top" font="{light}" fontsize="50%" color="{clrLightGray}" text="min: {mintemperature}°C" />
			<drawtext x="0" align="right" valign="bottom" font="{light}" fontsize="50%" color="{clrLightGray}" text="max: {maxtemperature}°C" />
		</area>
	</currentweather>

	<systemload condition="{showInfosAndTimers}||{showInfosAndTimersAndLastrecs}" detached="true" delay="200" fadetime="500" >
		<area x="79%" y="80%" width="21%" height="20%" layer="3">
		</area>
		<area x="81%" y="86%" width="14%" height="6%" layer="3">
			<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="System Load: {load}" />
		</area>
	</systemload>
	
	<temperatures condition="{showInfosAndTimers}||{showInfosAndTimersAndLastrecs}" detached="true" delay="200" fadetime="500" >
		<area x="81%" y="80%" width="14%" height="6%" layer="3">		
			<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="CPU: {cputemp}°C   GPU: {gputemp}°C"/>
		</area>
	</temperatures>

	<menuitems x="0" y="20%" orientation="vertical" width="100%" height="50%" align="center" numlistelements="{numShortMenuitems}">
		<listelement>
			<area x="57%" width="38%" layer="3">
				<drawimage condition="not{current}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuTVG" />
				<drawimage condition="{current}++eq({indexcoloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG_Gradient" />
				<drawimage condition="{current}++eq({indexcoloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG_Color" />
				<drawimage condition="{current}++eq({indexcoloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG" />
			</area>
			<area x="59%" width="2%" layer="3">
				<drawtext x="0" valign="center" align="right" font="{light}" fontsize="70%" color="{clrLightGray}" text="{number}" />
			</area>
			<areascroll scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="62%" width="33%" layer="3">
				<drawtext condition="{current}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{label}" />
				<drawtext condition="not{current}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{label}" />
			</areascroll>
		</listelement>
	</menuitems>

	<scrollbar>
		<area condition="lt({height},1000)" x="95%" y="20%" width="5%" height="50%" layer="3">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowScrollMain" />
			<drawimage x="15%" y="{areaheight} * {offset} / 1000" width="{areawidth}*0.09" height="{areaheight} * {height} / 1000" imagetype="skinpart" path="scrollBar" />
		</area>
	</scrollbar>
</menumain>
