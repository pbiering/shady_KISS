					<drawimage x="4%" y="0" width="{areawidth}*0.96" height="{areaheight}" imagetype="skinpart" path="cellRecordingsFolderDark" />
				</area>
				<area x="5%" width="4%" layer="4">
					<drawtext x="0" align="center" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{numrecordingsfolder}" />
				</area>
				<area x="10%" width="7%" layer="4">
					<drawtext align="center" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{tr(new)}: {newrecordingsfolder}" />
				</area>
			</areacontainer>
