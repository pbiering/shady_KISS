<menurecordings x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="0" scaletvy="0" scaletvwidth="100%" scaletvheight="100%">
	<background>
		<area x="0" y="0" width="100%" height="100%" transparency="15" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMenuDefault" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="2">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
		<area condition="{currentInfo}" transparency="10" x="70%" y="14%" width="25%" height="75%" layer="3">
				<drawimage x="0" y="0" height="100%" width="100%" imagetype="skinpart" path="currentElementHeader" />
		</area>
	</background>

	<menuitems x="0" y="14%" orientation="vertical" width="100%" height="75%" align="center" numlistelements="{numShortSubmenuitems}">
		<listelement>
			<area condition="{folder}" x="0" width="19%" layer="3">
				<drawimage x="4%" y="0" width="{areawidth}*0.96" height="{areaheight}" imagetype="skinpart" path="cellRecordingsFolder" />
			</area>
			<area condition="not{folder}" x="0" width="19%" layer="3">
				<drawimage x="4%" y="0" width="{areawidth}*0.96" height="{areaheight}" imagetype="skinpart" path="cellRecordings" />
			</area>
			<area condition="not{folder}" x="2%" width="8%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{printf('%02d.%02d.%d', daynumeric, month, year)}" />
			</area>
			<area condition="not{folder}" x="10%" width="4%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{time}" />
			</area>
			<area condition="not{folder}" x="15%" width="4%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{durationhours}:{durationminutes} " />
			</area>
			<area condition="not{folder}" x="14%" y="1%" width="5%" height="6%" layer="4">
				<drawrectangle x="0" y="{areaheight}*0.92" width="{areawidth}*0.9*{percentseen}/100" height="{areaheight}*0.03" color="{clrHigh}" />
			</area>

			<area condition="{folder}" x="6%" width="3%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="recs: " />
			</area>
			<area condition="{folder}" x="9%" width="2%" layer="4">
				<drawtext x="0" align="right" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{numrecordingsfolder}," />
			</area>
			<area condition="{folder}" x="12%" width="3%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="new: " />
			</area>
			<area condition="{folder}" x="16%" width="{areawidth}*0.0128" layer="4">
				<drawtext x="0" valign="center" align="right" font="{light}" fontsize="60%" color="{clrLightGray}" text="{newrecordingsfolder}" />
			</area>
<!--not{currentInfo}-->
			<area condition="not{currentInfo}" x="19%" width="75%" layer="3">
				<drawimage condition="not{current}" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonLong"/>
				<drawimage condition="{current}++eq({coloredButtons},0)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonLongActive"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonLongActive_Gradient"/>
				<drawimage condition="{current}++eq({coloredButtons},1)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonLongActiveColor"/>
			</area>
			<area condition="not{currentInfo}" x="91%" width="2%" layer="4">
				<drawimage condition="not{folder}++{new}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="greenFL" />
				<drawimage condition="not{folder}++{cutted}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="blueFL" />
				<drawimage condition="not{folder}++{cutted}++{new}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="green_blueFL" />
			</area>
			<areascroll condition="{folder}++not{currentInfo}" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="21%" width="71%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}"/>
			</areascroll>
			<areascroll condition="not{folder}++not{currentInfo}" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="21%" width="71%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}"/>
			</areascroll>
<!--{currentInfo}-->
			<area condition="{currentInfo}" x="19%" width="50%" layer="3">
				<drawimage condition="not{current}" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonMedium"/>
				<drawimage condition="{current}++eq({coloredButtons},0)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive_Gradient"/>
				<drawimage condition="{current}++eq({coloredButtons},1)" x="1%" y="0" width="{areawidth}*0.991" height="{areaheight}" imagetype="skinpart" path="buttonMediumActiveColor"/>
			</area>
			<area condition="{currentInfo}" x="66%" width="2%" layer="4">
				<drawimage condition="not{folder}++{new}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="greenFL" />
				<drawimage condition="not{folder}++{cutted}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="blueFL" />
				<drawimage condition="not{folder}++{cutted}++{new}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="green_blueFL" />
			</area>
			<areascroll condition="{folder}++{currentInfo}" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="21%" width="45%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}"/>
			</areascroll>
			<areascroll condition="not{folder}++{currentInfo}" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="21%" width="45%" layer="4">
				<drawtext x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{name}"/>
			</areascroll>
		</listelement>

		<currentelement delay="0" fadetime="0">
			<area condition="{currentInfo}" x="71%" y="1%" width="23%" height="6%" layer="4">
				<drawtext name="title" x="0" y="5%" width="100%" align="center" font="{light}" fontsize="75%" color="{clrLightGray}" text="{name}" />
			</area>
			<area condition="not{folder}++{currentInfo}" x="70%" y="7%" width="25%" height="5%" layer="4">
				<drawtext x="4%" y="25%" width="100%" font="{light}" fontsize="75%" color="{clrLightGray}" text="{daynumeric}.{month}.{year}   {time}   ({duration} min)" />
			</area>
				
			<area condition="not{folder}++{currentInfo}" x="70%" y="12%" width="25%" height="{areaheight}*0.93" layer="4">
				<drawimage condition="{hasposter}" name="poster" imagetype="image" path="{posterpath}" x="4%" y="2%" width="{areawidth}*0.35" height="{areawidth}*0.35* {posterheight} / {posterwidth}"/>
				<drawtextbox condition="{hasposter}" x="4%" y="2%" width="92%" height="96%" float="topleft" floatwidth="{width(poster)}*1.1" floatheight="{height(poster)}*1.1" font="{light}" fontsize="4%" color="{clrLightGray}" text="{description}" />
				<drawtextbox condition="not{hasposter}" x="4%" y="2%" width="92%" height="96%" font="{light}" fontsize="4%" color="{clrLightGray}" text="{description}" />
			</area>

			<!--FR!!!!{percentseen}<area condition="not{folder}++{currentInfo}" x="70%" y="1%" width="25%" height="6%" layer="6">
				<drawrectangle debug="true" x="2%" y="{areaheight}*0.92" width="{areawidth}*0.96*{percentseen}/100" height="{areaheight}*0.03" color="{clrHigh}" />
			</area>-->

			<area condition="{folder}++{currentInfo}" x="71%" y="10%" width="23%" height="10%" layer="4">
				<drawtext condition="eq({numrecordingsfolder}, 1)" x="0" y="0" align="center" width="100%" font="{light}" fontsize="45%" color="{clrLightGray}" text="{numrecordingsfolder} {tr(recording)}" />
				<drawtext condition="gt({numrecordingsfolder}, 1)" x="0" y="0" align="center" width="100%" font="{light}" fontsize="45%" color="{clrLightGray}" text="{numrecordingsfolder} {tr(recordings)}" />
				<drawtext name="newrecordingsfolder" x="0" y="45%" align="center" width="100%" font="{light}" fontsize="40%" color="{clrLightGray}" text="{newrecordingsfolder} {tr(new)}" />
			</area>
			<area condition="{folder}++{hasposter}++{currentInfo}" x="71%" y="21%" width="23%" height="70%" layer="4">
				<drawimage condition="{hasposter}" x="10%" y="0" height="{areawidth}*0.8*{posterheight}/{posterwidth}" width="{areawidth}*0.8" imagetype="image" path="{posterpath}" />
			</area>
		</currentelement>
	</menuitems>

	<scrollbar>
		<area condition="lt({height},1000)" x="95%" y="14%" width="5%" height="75%" layer="3">
			 <drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowScrollSub" />
			 <drawimage x="15%" y="{areaheight} * {offset} / 1000" width="{areawidth}*0.1" height="{areaheight} * {height} / 1000" imagetype="skinpart" path="scrollBar" />
		</area>
	</scrollbar>
</menurecordings>
