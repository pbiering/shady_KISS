					<drawimage condition="{new}++eq({03_new-recordingsMarker}, 9)" x="0" y="0" width="{areaheight}*0.68" height="{areaheight}" imagetype="skinpart" path="yellowMarker" />

					<drawimage condition="not{new}++not{watched}++eq({05_notNewNotWatched-recordingsMarker}, 1)" x="0" y="0" width="{areaheight}*0.68" height="{areaheight}" imagetype="skinpart" path="blueMarker" />
					<drawimage condition="not{new}++not{watched}++eq({05_notNewNotWatched-recordingsMarker}, 2)" x="0" y="0" width="{areaheight}*0.68" height="{areaheight}" imagetype="skinpart" path="darkGrayMarker" />
