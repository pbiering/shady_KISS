				</area>
				<area condition="not{folder}++{longElapsedBar}" x="20%" width="49%" layer="4">
					<drawrectangle x="0" y="{areaheight}*0.96" width="{areawidth}*0.99*{percentseen}/100" height="{areaheight}*0.01" color="{clrHigh}" />
				</area>

				<area condition="not{folder}" x="64%" width="{areaheight}" transparency="15" layer="4">
					<drawimage condition="{cutted}" x="0" y="0" valign="center" width="{areaheight}*0.6" height="{areaheight}*0.6" imagetype="icon" path="cutActive" />
