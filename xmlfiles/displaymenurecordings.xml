					<drawimage condition="not{cutted}" x="0" y="0" valign="center" width="{areaheight}*0.6" height="{areaheight}*0.6" imagetype="icon" path="cut" />
				</area>

				<area condition="not{folder}" x="91%" width="2%" layer="4">
					<drawimage condition="{new}++eq({03_new-recordingsMarker}, 1)" x="0" y="0" width="{areaheight}*0.68" height="{areaheight}" imagetype="skinpart" path="blueMarker" />
