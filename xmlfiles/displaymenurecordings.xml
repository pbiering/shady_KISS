<menurecordings x="0" y="0" width="100%" height="100%" orientation="{recmenuorientation}" fadetime="0" >
	<background orientation="vertical">
		<area x="0" y="0" width="100%" height="100%" transparency="{transBackground}" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMenuDefault" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="2">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
		<area condition="eq({indexcurrentInfo}, 1)" x="70%" y="14%" width="25%" height="75%" transparency="{transLists}" layer="3">
			<drawimage x="0" y="0" height="100%" width="100%" imagetype="skinpart" path="currentElementHeader" />
		</area>
		<area condition="eq({indexcurrentInfo}, 2)" x="65%" y="14%" width="30%" height="75%" transparency="{transLists}" layer="3">
			<drawimage x="0" y="0" height="100%" width="100%" imagetype="skinpart" path="currentElementHeader" />
		</area>
	</background>
	
	<background orientation="horizontal">
		<area x="0" y="0" width="100%" height="100%" transparency="{transBackground}" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMenuDefault" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="2">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
	</background>

	<header condition="{showDiscUsage}">
		<area x="0" y="0" width="5%" height="10%" layer="3">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="disc" />
		</area>
		<area x="0" y="1%" width="6%" height="9%" layer="4">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="discSpec" />
			<drawimage x="0" width="{areawidth}" height="{areaheight}/100*{freepercent}" imagetype="skinpart" path="discSpecHide" />
		</area>
		<area x="0" y="6%" width="5%" height="4%" layer="4">
			<drawtext x="0" y="25%"  align="center" font="{light}" fontsize="75%" color="{clrLightGray}" text="{usedpercent}%" />
		</area>
		<area x="6%" y="2%" width="60%" height="7%" layer="4">
			<drawtext x="1%" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{title}" />
		</area>
	</header>
	
	<menuitems x="1%" y="12%" orientation="horizontal" width="95%" height="79%" align="center" numlistelements="7">
		<listelement>
			<area y="54%" height="46%" layer="3">
				<drawimage condition="{current}" x="0" y="0" width="100%" height="96%" imagetype="skinpart" path="buttonRootCurrentTVG_Gradient_ver" />
				<drawimage condition="not{current}" x="4%" y="15%" width="92%" height="80%" imagetype="skinpart" path="buttonPlexCover" />
			</area>
			<area condition="{folder}" y="51%" height="46%" layer="4">
				<drawimage condition="not{current}" name="foldericon" align="center" y="14%" width="{areaheight}*0.7*0.68" height="{areaheight}*0.7" imagetype="icon" path="ico_recfolder"  />
				<drawimage condition="{current}" name="foldericon" align="center" y="0" width="{areaheight}*0.9*0.68" height="{areaheight}*0.9" imagetype="icon" path="ico_recfolder"  />
				<drawtextbox align="center" maxlines="2" x="5%" y="80%" width="90%" height="25%" font="{light}" fontsize="8%" color="{clrLightGray}" text="{name}" />
				<drawtext align="center" x="5%" y="70%" width="98%" font="{light}" fontsize="8%" color="{clrLightGray}" text="({numrecordingsfolder}, {newrecordingsfolder} {tr(new)})" />
			</area>
			<areacontainer condition="not{folder}">
				<area condition="not{current}" y="64%" height="36%" layer="4">
					<drawimage condition="{hasposterthumbnail}" y="0" align="center" width="{areaheight}*0.7*0.68" height="{areaheight}*0.7" imagetype="image" path="{thumbnailpath}" />
					<drawrectangle x="22%" y="72%" width="{areawidth}*0.56*{percentseen}/100" height="{areaheight}*0.01" color="{clrHigh}" />
					<drawtextbox align="center" maxlines="2" x="4%" y="75%" width="92%" height="38%" font="{light}" fontsize="9%" color="{clrLightGray}" text="{name}" />
				</area>
				<area condition="{current}" y="54%" height="46%" layer="4">
					<drawtextbox align="center" maxlines="3" x="5%" y="10%" width="90%" height="38%" font="{light}" fontsize="9%" color="{clrLightGray}" text="{name}" />
					<drawtext x="35%" y="47%" font="{light}" fontsize="8%" color="{clrLightGray}" text="{percentseen}%" />
					<drawtext x="35%" y="71%" font="{light}" fontsize="8%" color="{clrLightGray}" text="{duration} min" />
					<drawtext x="5%" y="87%" font="{light}" fontsize="7%" color="{clrLightGray}" text="{date}" />
					<drawtext y="87%" align="right" font="{light}" fontsize="7%" color="{clrLightGray}" text="{time}   " />
				</area>
				<area condition="{current}" y="54%" height="46%" transparency="40" layer="4">
					<drawimage condition="gt({percentseen}, 0)" x="8%" y="46%" width="{areaheight}*0.1" height="{areaheight}*0.1" imagetype="icon" path="seenActive" />
					<drawimage condition="eq({percentseen}, 0)" x="8%" y="46%" width="{areaheight}*0.1" height="{areaheight}*0.1" imagetype="icon" path="seen" />
					<drawimage condition="{cutted}" x="3%" y="60%" width="{areaheight}*0.2" height="{areaheight}*0.2" imagetype="icon" path="cutActive" />
					<drawimage condition="not{cutted}" x="3%" y="60%" width="{areaheight}*0.2" height="{areaheight}*0.2" imagetype="icon" path="cut" />
				</area>
			</areacontainer>
		</listelement>

		<currentelement delay="200" fadetime="0">
			<area condition="isset{posterpath}" x="0" y="1%" width="98%" height="52%" layer="3">
				<drawimage imagetype="skinpart" path="posterBGDetail" x="0" y="0" width="{areawidth}*0.203" height="{areawidth}*0.27"/>
				<drawimage name="poster" imagetype="image" path="{posterpath}" x="0" y="0" width="{areaheight}*0.95*{posterwidth}/{posterheight}" height="95%"/>
				<drawrectangle x="0" y="98%" width="{width(poster)}*{percentseen}/100" height="{areaheight}*0.006" color="{clrHigh}" />
				<drawtext name="title" x="{width(poster)}*1.2" y="0" font="{semibold}" fontsize="12%" color="{clrLightGray}" text="{name}" />
				<drawtext name="shorttext" x="{width(poster)}*1.2" y="{height(title)}" width="0.96*{areawidth} - {width(poster)}" font="{light}" fontsize="10%" color="{clrLightGray}" text="{shorttext}" />
				<drawtextbox x="{width(poster)}*1.2" y="23%" width="{areawidth}*0.94 - {width(poster)}" height="{areaheight}*0.77" font="{light}" fontsize="9%" color="{clrLightGray}" text="{description}" />
			</area>
			<area condition="empty{posterpath}" x="0" y="1%" width="98%" height="52%" layer="3">
				<drawtext name="title" x="1%" y="0" font="{semibold}" fontsize="12%" color="{clrLightGray}" text="{name}" />
				<drawtext name="shorttext" x="1%" y="{height(title)}" width="98%" font="{semibold}" fontsize="10%" color="{clrLightGray}" text="{shorttext}" />
				<drawtextbox x="1%" y="23%" width="{areawidth}*0.98" height="{areaheight}*0.77" font="{light}" fontsize="9%" color="{clrLightGray}" text="{description}" />
			</area>
		</currentelement>
	</menuitems>

	<menuitems x="0" y="14%" orientation="vertical" width="100%" height="75%" align="center" numlistelements="{00_numRecordingsmenuitems}">
		<listelement>
			<areacontainer condition="not{folder}">
				<area x="0" width="19%" transparency="{transLists}" layer="3">
					<drawimage x="4%" y="0" width="{areawidth}*0.96" height="{areaheight}" imagetype="skinpart" path="cellRecordings" />
				</area>
				<area condition="eq({00_numRecordingsmenuitems}, 12)" x="{areawidth}*0.01" width="8%" layer="4">
					<drawtext align="center" valign="center" font="{light}" fontsize="57%" color="{clrLightGray}" text="{printf('%02d.%02d.%d', daynumeric, month, year)}" />
				</area>
				<area condition="gt({00_numRecordingsmenuitems}, 12)" x="{areawidth}*0.01" width="8%" layer="4">
					<drawtext align="center" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{printf('%02d.%02d.%d', daynumeric, month, year)}" />
				</area>
				<area x="9%" width="5%" layer="4">
					<drawtext align="center" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{time}" />
				</area>
				<area x="14%" width="5%" layer="4">
					<drawtext align="center" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{durationhours}:{durationminutes} " />
				</area>
				<area condition="not{longElapsedBar}" x="14%" y="1%" width="5%" height="6%" layer="4">
					<drawrectangle x="0" y="{areaheight}*0.96" width="{areawidth}*0.9*{percentseen}/100" height="{areaheight}*0.03" color="{clrHigh}" />
				</area>
			</areacontainer>
			
			<areacontainer condition="{folder}">
