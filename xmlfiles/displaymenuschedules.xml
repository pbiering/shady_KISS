<menuschedules x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="0" scaletvy="0" scaletvwidth="100%" scaletvheight="100%">

	<background>
		<area x="0" y="0" width="100%" height="100%" transparency="15" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMenuDefault" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="3">
			<drawimage x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
		</area>
		<area condition="{currentInfo}" transparency="10" x="70%" y="14%" width="25%" height="75%" layer="3">
				<drawimage x="0" y="0" height="100%" width="100%" imagetype="skinpart" path="currentElementHeader" />
		</area>
	</background>
	<header>
		<area x="1%" y="2%" width="60%" height="7%" layer="3">
			<drawtext condition="{whatsonnow}||{whatsonnext}||{whatsonfavorites}" x="4%" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{title}" />
			<drawimage name="logo" condition="{whatson}" imagetype="channellogo" path="{channelid}" x="0" y="1%" width="15%" height="90%" valign="center" />
			<drawtext name="channel" condition="{whatson}" x="{width(logo)}*1.2" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{channelnumber} - {channelname}" />
		</area>
	</header>
	<menuitems x="0" y="14%" orientation="vertical" width="100%" height="75%" align="center" numlistelements="{numShortSubmenuitems}"> 
		<listelement>
<!--not{currentInfo}-->
			<area condition="not{currentInfo}" x="17%" width="78%" transparency="10" layer="3">
				<drawimage condition="not{current}++not{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLong"/>
				<drawimage condition="not{current}++{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonSeparatorLong"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActive_Gradient" />
				<drawimage condition="{current}++eq({coloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActiveColor" />
				<drawimage condition="{current}++eq({coloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonLongActive" />
			</area>
			<area condition="not{currentInfo}++{timerfull}" x="92%" width="2%" layer="4">
				<drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="redFL" />
			</area>
<!--{currentInfo}-->
			<area condition="{currentInfo}" x="17%" width="52%" transparency="10" layer="3">
				<drawimage condition="not{current}++not{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMedium"/>
				<drawimage condition="not{current}++{separator}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonSeparatorMedium"/>
				<drawimage condition="{current}++eq({coloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive_Gradient" />
				<drawimage condition="{current}++eq({coloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActiveColor" />
				<drawimage condition="{current}++eq({coloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonMediumActive" />
			</area>
			<area condition="{currentInfo}++{timerfull}" x="66%" width="2%" layer="4">
				<drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="redFL" />
			</area>

<!-- WHATSON -->
			<area condition="not{separator}++{whatson}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellBackground" />
			</area>
			<area condition="not{separator}++{whatson}" x="2%" width="3%" layer="4">
				<drawtext x="0" width="100%" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{day}" />
			</area>
			<area condition="not{separator}++{whatson}" x="5%" width="6%" layer="4">
				<drawtext x="0" width="100%" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{printf('%02d.%02d', daynumeric, month)}." />
			</area>
			<area condition="not{separator}++{whatson}" x="11%" width="7%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{start}" />
			</area>
<!--{currentInfo}-->
			<areascroll condition="{currentInfo}++not{separator}++{whatson}++isset{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>
			<areascroll condition="{currentInfo}++not{separator}++{whatson}++empty{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="{currentInfo}++isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>
<!--not{currentInfo}-->
			<areascroll condition="not{currentInfo}++not{separator}++{whatson}++isset{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>
			<areascroll condition="not{currentInfo}++not{separator}++{whatson}++empty{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>

<!-- WHATSONNOW -->
			<area condition="not{separator}++{whatsonnow}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellBackground" />
			</area>
			<area condition="not{separator}++{whatsonnow}" x="2%" width="6%" layer="4">
				<drawimage name="logo" imagetype="channellogo" path="{channelid}" x="27%" y="20%" width="65%" height="65%" />
			</area>
			<area condition="not{separator}++{whatsonnow}" x="11%" width="7%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{start}" />
			</area>
			<area condition="not{separator}++{whatsonnow}++{running}" x="9%" width="7%" layer="4">
				<drawrectangle x="12%" y="{areaheight}*0.96" width="{areawidth}*0.84*{elapsed}/{duration}" height="{areaheight}*0.01" color="{clrHigh}" />
			</area>
<!--{currentInfo}-->
			<areascroll condition="{currentInfo}++not{separator}++{whatsonnow}++empty{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>
			<areascroll condition="{currentInfo}++not{separator}++{whatsonnow}++isset{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>
<!--not{currentInfo}-->
			<areascroll condition="not{currentInfo}++not{separator}++{whatsonnow}++empty{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>
			<areascroll condition="not{currentInfo}++not{separator}++{whatsonnow}++isset{shorttext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>

<!-- WHATSONNEXT -->
			<area condition="not{separator}++{whatsonnext}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellBackground" />
			</area>
			<area condition="not{separator}++{whatsonnext}" x="2%" width="6%" layer="4">
				<drawimage name="logo" imagetype="channellogo" path="{channelid}" x="27%" y="20%" width="65%" height="65%" />
			</area>
			<area condition="not{separator}++{whatsonnext}" x="11%" width="7%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{start}" />
			</area>
<!--{currentInfo}-->
			 <areascroll condition="{currentInfo}++not{separator}++{whatsonnext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="isset{title}++empty{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
				<drawtext condition="isset{title}++isset{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>
<!--not{currentInfo}-->
			 <areascroll condition="not{currentInfo}++not{separator}++{whatsonnext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{title}++empty{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
				<drawtext condition="isset{title}++isset{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
			</areascroll>

<!-- WHATSONFAVORITES -->
			<area condition="not{separator}++{whatsonfavorites}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellBackground" />
			</area>
			<area condition="not{separator}++{whatsonfavorites}" x="2%" width="6%" layer="4">
				<drawimage name="logo" imagetype="channellogo" path="{channelid}" x="27%" y="20%" width="65%" height="65%" />
			</area>
			<area condition="not{separator}++{whatsonfavorites}" x="11%" width="7%" layer="4">
				<drawtext condition="isset{title}" name="menutext" x="0" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{start}" />
			</area>
<!--{currentInfo}-->
			<areascroll condition="{currentInfo}++not{separator}++{whatsonfavorites}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="47%" layer="4">
				<drawtext condition="isset{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
				<drawtext condition="empty{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>
<!--not{currentInfo}-->
			<areascroll condition="not{currentInfo}++not{separator}++{whatsonfavorites}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
				<drawtext condition="isset{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title} - {shorttext}"/>
				<drawtext condition="empty{shorttext}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{title}"/>
			</areascroll>
			
<!-- Separator -->
			<area condition="{separator}" x="0" width="16%" layer="3">
				<drawimage x="5%" y="0" width="{areawidth}*0.95" height="{areaheight}" imagetype="skinpart" path="cellSepBackground" />
			</area>
			<area condition="{separator}++{whatson}" x="0%" width="16%" layer="4">
				<drawtext condition="isset{title}" x="0" align="center" valign="center" font="{light}" fontsize="60%" color="{clrHigh}" text="{title}" />
			</area>
			<area condition="not{currentInfo}++{separator}++isset{title}" x="19%" width="73%" layer="4">
				<drawtext condition="{whatsonnow}||{whatsonnext}||{whatsonfavorites}" x="0" align="center" valign="center" font="{light}" fontsize="70%" color="{clrHigh}" text="{title}" />
			</area>
			<area condition="{currentInfo}++{separator}++isset{title}" x="18%" width="47%" layer="4">
				<drawtext condition="{whatsonnow}||{whatsonnext}||{whatsonfavorites}" x="0" align="center" valign="center" font="{light}" fontsize="70%" color="{clrHigh}" text="{title}" />
			</area>
		</listelement>

		<currentelement delay="0" fadetime="0">
			<area condition="{currentInfo}" x="71%" y="1%" width="23%" height="6%" layer="4">
				<drawtext x="0" y="5%" width="100%" align="center" font="{light}" fontsize="75%" color="{clrLightGray}" text="{title}" />
			</area>
			<area condition="{currentInfo}" x="70%" y="7%" width="25%" height="5%" layer="4">
				<drawtext x="4%" y="25%" width="100%" font="{light}" fontsize="75%" color="{clrLightGray}" text="{day} {daynumeric}.{month}.   {start} - {stop}   ({duration} min)" />
			</area>
			<area condition="{currentInfo}" x="70%" y="12%" width="25%" height="{areaheight}*0.93" layer="4">
				<drawimage condition="{hasposter}" name="poster" imagetype="image" path="{posterpath}" x="4%" y="2%" width="{areawidth}*0.35" height="{areawidth}*0.35* {posterheight} / {posterwidth}"/>
				<drawtextbox condition="{hasposter}" x="4%" y="2%" width="92%" height="96%" float="topleft" floatwidth="{width(poster)}*1.1" floatheight="{height(poster)}*1.1" font="{light}" fontsize="4%" color="{clrLightGray}" text="{description}" />
				<drawtextbox condition="not{hasposter}" x="4%" y="2%" width="92%" height="96%" font="{light}" fontsize="4%" color="{clrLightGray}" text="{description}" />
			</area>
			<area condition="{currentInfo}++{running}" x="70%" y="1%" width="25%" height="6%" layer="4">
				<drawrectangle x="2%" y="{areaheight}*0.92" width="{areawidth}*0.96*{elapsed}/{duration}" height="{areaheight}*0.03" color="{clrHigh}" />
			</area>
		</currentelement>
	</menuitems>

	<scrollbar>
		<area condition="lt({height},1000)" x="95%" y="14%" width="5%" height="75%" layer="3">
			 <drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowScrollSub" />
			 <drawimage x="15%" y="{areaheight} * {offset} / 1000" width="{areawidth}*0.1" height="{areaheight} * {height} / 1000" imagetype="skinpart" path="scrollBar" />
		</area>
	</scrollbar>

</menuschedules>
