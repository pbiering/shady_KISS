<!--noCurrentInfo-->
			 <areascroll condition="eq({indexcurrentInfo}, 0)++not{separator}++{whatsonnext}" scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="19%" width="73%" layer="4">
