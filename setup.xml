<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "../../dtd/setup.dtd">

<setup>
    <!--
    define all your parameters here which should be configurable via
    OSD and the skindesigner setup menu.
    Parameters must have type "bool" or "integer". For "bool" Parameters
    a choice yes/no is shown in the setup menu, a "integer" parameter
    can be configured to a value between "min" and "max". If "min" is not
    set, "0" is the minimum, if "max" is not set, "1000" is maximum.
    "displayname" is used to display the option in the setup menu.
    The configured parameter value is the default value.
    -->
    <menu>
<!--
        <parameter type="bool" name="showdevices" displaytext="{tr(showdevices)}">0</parameter>
-->
		<parameter type="bool" name="defaultcolumnwidth" displaytext="{tr(defaultcolumnwidth)}">0</parameter>
		<parameter type="bool" name="channeldetails" displaytext="{tr(channeldetails)}">0</parameter>
		<parameter type="bool" name="timerstoptime" displaytext="{tr(timerstoptime)}">0</parameter>
		<parameter type="bool" name="recordingtime" displaytext="{tr(recordingtime)}">0</parameter>		
		<parameter type="bool" name="showtimers" displaytext="{tr(showtimers)}">0</parameter>
		<parameter type="bool" name="gradientBGPNG" displaytext="{tr(gradientBGPNG)}">1</parameter>
    </menu>

    <!--
    translations of displaytexts
    -->
    <translations>
        <token name="tr(defaultcolumnwidth)">
            <trans lang="en_EN">Defaultcolumnwidth</trans>
            <trans lang="de_DE">Standardspaltenbreite</trans>
        </token>
        <token name="tr(channeldetails)">
            <trans lang="en_EN">Show details of channels</trans>
            <trans lang="de_DE">Zeige Kanaldetails</trans>
        </token>
        <token name="tr(timerstoptime)">
            <trans lang="en_EN">Show timersstoptime</trans>
            <trans lang="de_DE">Zeige Endzeit für Timer</trans>
        </token>        
        <token name="tr(recordingtime)">
            <trans lang="en_EN">Show time of recordings</trans>
            <trans lang="de_DE">Zeige Uhrzeit der Aufnahmen</trans>
        </token>       
		<token name="tr(showtimers)">
            <trans lang="en_EN">Show timers in mainmenu</trans>
            <trans lang="de_DE">Zeige Timer im Hauptmenü</trans>
		</token>
		<token name="tr(gradientBGPNG)">
            <trans lang="en_EN">Pixelgraphicbackground in menus</trans>
            <trans lang="de_DE">Pixelgraphikhintergrund in den Menüs</trans>
        </token>      
    </translations>
</setup>
